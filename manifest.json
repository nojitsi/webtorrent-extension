{
  "manifest_version": 3,
  "name": "Webtorrent Client",
  "version": "0.1",

  "action": {
    "default_icon": {              
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "description": "A fully certified webtorrent client",
  "icons": { 
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png" 
  },

  "author": "nojitsi",
  "minimum_chrome_version": "92",

  "background": {
    "service_worker": "engine.mjs"
  },
  
  "externally_connectable": {
    "matches": ["*://*.localhost.com/*"]
  },
  "homepage_url": "https://path/to/homepage",

  "incognito": "spanning",
  "omnibox": {
    "keyword": "torrentbay"
  },

  "permissions": ["tabs"],

  "short_name": "TorrentCP",
  "update_url": "https://path/to/updateInfo.xml",
  "version_name": "alphanumericbottom"
}